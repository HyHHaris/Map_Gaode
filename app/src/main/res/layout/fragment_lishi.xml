<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/bg_light_gray"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerTop"
            android:layout_width="0dp"
            android:layout_height="53dp"
            android:background="@color/qmui_config_color_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@mipmap/icon_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textTime"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextClock
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:format12Hour="HH:mm"
                android:format24Hour="HH:mm"
                android:text="17:31"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/textDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>

        <TextClock
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:format12Hour="MM-dd"
                android:format24Hour="MM-dd"
                android:text="04-12"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textTime"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@color/qmui_config_color_white"
            app:cardCornerRadius="6dp"
            app:cardElevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerTop">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="match_parent">


            <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/blueLine"
                    android:layout_width="3dp"
                    app:layout_constraintBottom_toBottomOf="@id/title"
                    android:background="#FF2591EC"
                    android:layout_height="0dp"/>

            <TextView
                    app:layout_constraintStart_toEndOf="@id/blueLine"
                    app:layout_constraintTop_toTopOf="@id/blueLine"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/short_blue_line"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:text="历史数据"
                    android:layout_height="wrap_content"/>


            <LinearLayout
                    android:orientation="horizontal"
                    android:background="#FF2E70D3"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/rcvTitle"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="28dp">

                <androidx.appcompat.widget.AppCompatTextView
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="0.5sp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:id="@+id/text1"
                        app:autoSizeMinTextSize="6dp"
                        android:text="编号"
                        android:gravity="center"
                        android:textColor="@color/qmui_config_color_white"
                        android:lines="1"
                        android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                        app:autoSizeTextType="uniform"
                        android:id="@+id/text2"
                        app:autoSizeStepGranularity="0.5sp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="上报地块"
                        android:gravity="center"
                        android:textColor="@color/qmui_config_color_white"
                        android:lines="1"
                        android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="0.5sp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:singleLine="true"
                        android:text="巡查结束时间"
                        android:id="@+id/text3"
                        android:gravity="center"
                        android:textColor="@color/qmui_config_color_white"
                        android:lines="1"
                        android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="0.5sp"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:singleLine="true"
                        android:id="@+id/text4"
                        android:text="上报内容"
                        android:gravity="center"
                        android:textColor="@color/qmui_config_color_white"
                        android:lines="1"
                        android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                        app:autoSizeTextType="uniform"
                        app:autoSizeStepGranularity="0.5sp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:id="@+id/text5"
                        android:text="操作"
                        android:gravity="center"
                        android:textColor="@color/qmui_config_color_white"
                        android:lines="1"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                    app:layout_constraintTop_toBottomOf="@id/rcvTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="#EAF0FB"
                    android:id="@+id/rcv"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>